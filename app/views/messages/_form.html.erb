<%if @message.present? %>
  <%= simple_form_for @message, remote: true do |f| %>
    <%= f.text_field :content %>
    <%= f.select :user_id, User.all.map { |r| [r.name, r.id] }%>
    <%= f.input :chat_room_id, :as => :hidden, :input_html => { value: @chat_room.id } %>
    <%= f.submit %>
  <% end %>
<% end %>
